{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "GDP Growth by State Over Time",
    "width": 800,
    "height": 400,
    "params": [
      {
        "name": "sector",
        "value": "Overall GDP",
        "bind": {
          "input": "select",
          "options": ["Overall GDP", "Mining & Quarrying", "Construction", "Import Duties", "Agriculture", "Services", "Manufacturing"],
          "name": "Select Sector: "
        }
      }
    ],
    "data": {
      "url": "https://raw.githubusercontent.com/ranusha-l/FIT3179_A2/refs/heads/main/gdp_state_cleaned.csv",
      "format": {"type": "csv"}
    },
    "transform": [
      {"filter": "datum.sector == sector"},
      {"filter": "datum.series == 'growth_yoy'"}
    ],
    "layer": [
      {
        "mark": {"type": "line", "point": true},
        "encoding": {
        "x": {"field": "year", "type": "ordinal", "title": "Year"},
        "y": {"field": "value", "type": "quantitative", "title": "GDP"},
        "color": {"field": "state", "type": "nominal", "title": "State"},
        "tooltip": [
          {"field": "state", "type": "nominal", "title": "State"},
          {"field": "year", "type": "ordinal", "title": "Year"},
          {"field": "value", "type": "quantitative", "title": "GDP"}
      ]
    }}
  
  ]
    
    
  }
  